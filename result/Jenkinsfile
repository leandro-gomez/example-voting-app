pipeline {
    agent any

    tools {
        nodejs "Node 8.9.0"
    }
    stages {
        stage('build') {
            when {
                changeset '**/result/**'
            }
            steps {
                echo 'Compiling result app'
                dir('result') {
                    sh 'npm install'
                }
            }
        }
        stage('test') {
            when {
                changeset '**/result/**'
            }
            steps {
                echo 'Running tests'
                dir('worker') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }
    
    post {
        always{
            echo "Finished!"
        }
    }
}

